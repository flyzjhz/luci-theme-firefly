from src.UdpPackageModule import UdpPackage
from app.ApplicationInstance import ApplicationInstance
import time
import sys
import os
import pynotify
import getopt
import time

p = UdpPackage()

def usr_start():
    print """Start the Service"""
    ApplicationInstance( '/tmp/myapp.pid' )
    p.listen();
    while True:
        time.sleep(1)  
        
    
def usr_exit():
    pid = os.popen("cat /tmp/myapp.pid").read()
    p.close()
    os.popen("kill "+pid).read()
    print """Exit ... """
    
def usr_restart():
    print """Ready to Restart the Service ..."""
    usr_exit()
    time.sleep(1)
    usr_start()

def usage():
    print """Usage:
    UdpServer start
        Use to start the Service
    UdpServer exit
        Use to quit the Service
    UdpServer restart
        Use to restart the Service     
    """

if __name__ == '__main__':
    if  len(sys.argv) > 1:
        if  sys.argv[1] == "start" :
            usr_start()
        elif sys.argv[1] == "exit" :
            usr_exit()
        elif sys.argv[1] == "restart" :
            usr_restart()
        else :
            usage()
            
            
